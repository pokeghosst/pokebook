---
interface Props {
  href: string;
  type: "primary" | "secondary";
  external?: boolean;
}

const { href, type, external = false } = Astro.props;
---

<a href={href} target={external ? "_blank" : "_self"} class={`btn btn-${type}`}>
  <slot /></a
>

<style>
  .btn {
    padding: 0.75em 1.5em;
    border: none;
    cursor: pointer;
    text-decoration: none;
    width: max-content;
    display: block;
    border-radius: 5px;
  }

  /* Primary Button */
  .btn-primary {
    background-color: #ff7f50;
    color: #fff;
  }

  .btn-primary:hover {
    background-color: #ff7043;
  }

  .btn-primary:active {
    background-color: #f4511e;
  }

  .btn-primary:disabled,
  .btn-primary[disabled] {
    background-color: #ffccbc;
    color: #fff;
    cursor: not-allowed;
    opacity: 0.6;
  }

  .btn-secondary {
    background-color: #4caf50;
    color: #fff;
  }

  .btn-secondary:hover {
    background-color: #43a047;
  }

  .btn-secondary:active {
    background-color: #388e3c;
  }

  .btn-secondary:disabled,
  .btn-secondary[disabled] {
    background-color: #a5d6a7;
    color: #fff;
    cursor: not-allowed;
    opacity: 0.6;
  }
</style>
